doctype html
html
    head
        title= `${pageTitle}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        h1.container List of pets
        table.container
          thead
            tr
              th Pet Name
              th Animal Type
              th Food Preference
          tbody
            each pet in pets
              tr
                td= pet.properties.pet_name
                td= pet.properties.pet_type
                td= pet.properties.preferred_food
