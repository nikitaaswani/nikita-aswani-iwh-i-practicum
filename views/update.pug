doctype html
html
  head
    title= `${pageTitle}`
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
    h1.container Add a new pet
    div.form-container.container
      div.form-wrapper
        form(action="/update-pets" method="post")
          label(for="pet_name") Pet Name
          input(type="text" name="pet_name")
          label(for="pet_type") Pet Type
          input(type="text" name="pet_type")
          label(for="preferred_food") Preferred Food
          input(type="text" name="preferred_food")
          button(type="submit") Add New Pet
    div.container
      a.homepage-link(href="/") Return to the homepage
